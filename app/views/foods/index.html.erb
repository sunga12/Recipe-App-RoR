<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |item| %>
      <tr>
        <td><%= item.name%></td>
        <td><%= item.measurement_unit%></td>
        <td>$<%= item.price%></td>
        <th scope="row">
        <%= link_to "Delete", food_path(item), method: :delete,  data: {turbo_method: :delete} %>
        </th>
      </tr>
    <%end%>
  </tbody>
</table>
<%= button_to "Add Food", new_user_food_path(@user.id), method: :get, class: ["btn btn-secondary"] %>
